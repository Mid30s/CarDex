<div
    class="w-full min-h-screen bg-gradient-to-r from-gray-400 via-gray-600 to-blue-800 py-6 flex flex-col justify-center sm:py-12">
    <div class="relative py-3 sm:max-w-xl sm:mx-auto">
        <div
            class="absolute inset-0 bg-gradient-to-r from-cyan-400 to-light-blue-500 shadow-lg transform -skew-y-6 sm:skew-y-0 sm:-rotate-6 sm:rounded-3xl">
        </div>
        <div class="relative px-4 py-10 bg-white shadow-lg sm:rounded-3xl sm:p-20">
            <h1 class="text-2xl font-semibold mb-6">Profile</h1>
            <form id="update-profile-form" class="space-y-8">
                <div>
                    <label for="first_name" class="text-sm font-medium">First Name</label>
                    <input id="first_name" name="first_name" type="text"
                        class="w-full mt-1 p-2 border border-gray-300 rounded" value="{{user.first_name}}" required>
                </div>
                <div>
                    <label for="last_name" class="text-sm font-medium">Last Name</label>
                    <input id="last_name" name="last_name" type="text"
                        class="w-full mt-1 p-2 border border-gray-300 rounded" value="{{user.last_name}}" required>
                </div>
                <div>
                    <label for="email" class="text-sm font-medium">Email</label>
                    <input id="email" name="email" type="email" class="w-full mt-1 p-2 border border-gray-300 rounded"
                        value="{{user.email}}" required>
                </div>
                <div>
                    <label for="phone" class="text-sm font-medium">Phone</label>
                    <input id="phone" name="phone" type="text" class="w-full mt-1 p-2 border border-gray-300 rounded"
                        value="{{user.phone}}" required>
                </div>
                <div>
                    <label for="address" class="text-sm font-medium">Address</label>
                    <input id="address" name="address" type="text"
                        class="w-full mt-1 p-2 border border-gray-300 rounded" value="{{user.address}}" required>
                </div>
                <div>
                    <label for="postcode" class="text-sm font-medium">Postcode</label>
                    <input id="postcode" name="postcode" type="text"
                        class="w-full mt-1 p-2 border border-gray-300 rounded" value="{{user.postcode}}" required>
                </div>
                <div>
                    <label for="city" class="text-sm font-medium">City</label>
                    <input id="city" name="city" type="text" class="w-full mt-1 p-2 border border-gray-300 rounded"
                        value="{{user.city}}" required>
                </div>
                <div>
                    <label for="state" class="text-sm font-medium">State</label>
                    <input id="state" name="state" type="text" class="w-full mt-1 p-2 border border-gray-300 rounded"
                        value="{{user.state}}" required>
                </div>
                <div class="pt-5">
                    <button type="submit"
                        class="w-full flex justify-center py-3 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Update Profile
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

