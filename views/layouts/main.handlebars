<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>The Tech Blog</title>
    <link href="./css/output.css" rel="stylesheet" />

  </head>

  <body class="h-full">
    <div class="h-full">
      <header class="bg-blue-500 h-32">
        <h1 class="text-3xl mb-3">The Tech Blog</h1>
        <nav class="flex gap-2">
          <a href="/">Home</a>
          <a href="/dashboard">Dashboard</a>
          <!-- Conditionally render login or logout links -->
          {{#if logged_in}}
            <button class="no-button" id="logout">logout</button>
          {{else}}
            <a href="/login">login</a>
          {{/if}}
        </nav>
      </header>
      <main class="flex h-full w-full">
        <!-- Render the sub layout -->
        {{{body}}}
      </main>
      <footer>

      </footer>
    </div>

    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>

</html>