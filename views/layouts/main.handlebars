<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mechanomicon</title>

    <!-- Import Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css"
      integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="/css/output.css" />
  </head>

  <body class="min-h-screen relative flex flex-col font-body">
    <!-- Header -->
    <nav class="bg-m-silver">
      <div
        class="max-w-screen-full flex flex-wrap items-center justify-between ml-10 p-6"
      >
        <a href="https://mechanomicon.herokuapp.com/" class="flex items-center">
          <img src="/images/logo-1.png" class="h-16 mr-3" alt="Logo" />
          <span
            class="self-center text-3xl font-semibold whitespace-nowrap text-m-green font-heading"
          >Mechanomicon</span>
        </a>
        <button
          data-collapse-toggle="navbar-default"
          type="button"
          class="inline-flex items-center p-2 ml-3 text-sm text-gray-500 rounded-lg md:hidden focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
          aria-controls="navbar-default"
          aria-expanded="false"
        >
          <span class="sr-only">Open main menu</span>
          <svg
            class="w-6 h-6"
            aria-hidden="true"
            fill="currentColor"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              fill-rule="evenodd"
              d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"
              clip-rule="evenodd"
            ></path>
          </svg>
        </button>
        <div class="hidden w-full md:block md:w-auto mr-24" id="navbar-default">
          <ul
            class="font-bold flex flex-col p-4 md:p-0 mt-4 md:flex-row md:space-x-8 md:mt-0 md:border-0 text-xl text-m-green"
          >
            <li>
              <a
                href="/"
                class="block py-2 pl-3 pr-4 rounded md:hover:bg-transparent md:border-0 md:hover:text-m-gold md:p-0"
                aria-current="page"
              >Home</a>
            </li>
            <li>
              <a
                href="#"
                class="block py-2 pl-3 pr-4 rounded md:hover:bg-transparent md:border-0 md:hover:text-m-gold md:p-0"
              >Services</a>
            </li>
            <li>
              <a
                href="#"
                class="block py-2 pl-3 pr-4 rounded md:hover:bg-transparent md:border-0 md:hover:text-m-gold md:p-0"
              >Pricing</a>
            </li>
            <li>
              <a
                href="/customer"
                class="block py-2 pl-3 pr-4 rounded md:hover:bg-transparent md:border-0 md:hover:text-m-gold md:p-0"
              >Dashboard</a>
            </li>

            {{#if logged_in}}
              <!-- User is logged in -->
              <li>
                <a
                  href="/profile"
                  id="profile"
                  class="block py-2 pl-3 pr-4 rounded md:hover:bg-transparent md:border-0 md:hover:text-m-gold md:p-0"
                >
                  Profile
                </a>
              </li>

              <li>
                <button
                  id="logout"
                  class="block py-2 pl-3 pr-4 rounded md:hover:bg-transparent md:border-0 md:hover:text-m-gold md:p-0"
                >
                  Logout
                </button>
              </li>
            {{else}}
              <!-- User is not logged in -->
              <li>
                <a
                  href="/login"
                  class="block py-2 pl-3 pr-4 rounded md:hover:bg-transparent md:border-0 md:hover:text-m-gold md:p-0"
                >
                  Log in
                </a>
              </li>
            {{/if}}
          </ul>
        </div>
      </div>
    </nav>

    <!-- Main content -->
    <main class="w-full flex flex-grow">
      {{{body}}}
    </main>

    <!-- Footer -->
    <footer class="bg-m-silver" id="site-footer">
      <div class="container mx-auto px-4 pt-3 pb-2">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="text-center md:text-left">
            <h3 class="font-semibold text-lg mb-4">Quick Links</h3>
            <ul>
              <li class="mb-2"><a
                  href="/"
                  class="hover:text-blue-400"
                >Home</a></li>
              <li class="mb-2"><a
                  href="/dashboard"
                  class="hover:text-blue-400"
                >Dashboard</a></li>
              <li class="mb-2"><a
                  href="/profile"
                  class="hover:text-blue-400"
                >Profile</a></li>
            </ul>
          </div>

          <div class="text-center md:text-left">
            <h3 class="font-semibold text-lg mb-4">Follow Us
            </h3>
            <ul>
              <li><a href="#" class="hover:text-blue-400">
                  <i class="fab fa-fw fa-facebook"></i>
                  Facebook</a></li>
              <li><a href="#" class="hover:text-blue-400">
                  <i class="fab fa-fw fa-twitter"></i>
                  Twitter</a></li>
              <li><a href="#" class="hover:text-blue-400">
                  <i class="fab fa-fw fa-instagram"></i>
                  Instagram</a></li>
              <li><a href="#" class="hover:text-blue-400">
                  <i class="fab fa-fw fa-youtube"></i>
                  Youtube</a></li>
            </ul>
          </div>

          <div class="text-center md:text-left">
            <h3 class="font-semibold text-lg mb-4">Contact Us</h3>
            <address>
              <strong class="has-text-white">Mechanomicon</strong><br />
              1 Adelaide st, Adelaide 5000<br />
              <i class="fas fa-fw fa-phone"></i>
              <a href="#">(08) 8888-8888</a><br />
              <i class="fas fa-fw fa-envelope"></i>
              <a href="#">info@mechanomicon.com</a><br />
            </address>
          </div>
        </div>
        <hr class="border-gray-600 mt-2" />
        <div class="text-center mt-2">
          <p>&copy; 2023 Mechanomicon. All rights reserved.</p>
        </div>
      </div>
    </footer>

    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}

    <script>
      document.addEventListener('DOMContentLoaded', function () { const
      navbarToggle =
      document.querySelector('[data-collapse-toggle="navbar-default"]'); const
      navbarContent = document.getElementById('navbar-default');
      navbarToggle.addEventListener('click', function () {
      navbarContent.classList.toggle('hidden');
      navbarContent.classList.toggle('md:block'); }); });
    </script>

  </body>

</html>