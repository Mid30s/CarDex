<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CarDex</title>

    {{! <!-- Import Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css"
      integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    /> }}

  <!-- Open Sans font-->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">

  <link rel="stylesheet" href="/css/output.css" />
  </head>

  <body class="min-h-screen relative font-body text-black flex flex-col">
    <!-- Header -->
    <header class="text-m-green bg-m-silver py-6">
      <div class="container mx-auto flex items-center justify-between">
        <div class="flex items-center">
          <!-- Project Logo -->
          <img src="#" alt="Mechanomicon Logo" class="h-12 w-auto mr-4" />
          <h1
            class="text-4xl font-bold text-m-green font-heading"
          >Mechanomicon</h1>
        </div>
        <nav class="text-lg">
          <ul class="flex space-x-8">
            <li>
              <a
                href="/"
                class="text-2xl font-semibold hover:text-m-gold transition-colors duration-200"
              >
                Home
              </a>
            </li>
            <li>
              <a
                href="/dashboard"
                class="text-2xl font-semibold hover:text-m-gold transition-colors duration-200"
              >
                Dashboard
              </a>
            </li>
            {{#if logged_in}}
              <!-- User is logged in -->
              <li>
                <a
                  href="/profile"
                  id="profile"
                  class="text-2xl font-semibold hover:text-m-gold transition-colors duration-200"
                >
                  Profile
                </a>
              </li>
              <li>
                <button
                  id="logout"
                  class="text-2xl font-semibold hover:text-m-gold transition-colors duration-200"
                >
                  Logout
                </button>
              </li>
            {{else}}
              <!-- User is not logged in -->
              <li>
                <a
                  href="/login"
                  class="text-2xl font-semibold hover:text-m-gold transition-colors duration-200"
                >
                  Log in
                </a>
              </li>
            {{/if}}
          </ul>
        </nav>
      </div>
    </header>

    <!-- Main content -->
    <main class="w-full flex grow bg-m-cream">
      {{{body}}}
    </main>

    <!-- Footer -->
    <footer class="bg-m-silver text-m-green py-4 w-full">
      <div class="container mx-auto text-center">
        <p>&copy; 2023 Mechanomicon. All rights reserved.</p>
        <!-- Add your footer content here, e.g., social media links -->
      </div>
    </footer>

    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}

  </body>

</html>