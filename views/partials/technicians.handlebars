{{! Technicians table }}
<h2 class="text-2xl mb-2">Technicians</h2>
<table class="table-auto border border-collapse w-full text-center select-none">
  <thead>
    <tr class="border">
      <th class="border p-1">First Name</th>
      <th class="border p-1">Last Name</th>
      <th class="border p-1">Address</th>
    </tr>
    <tbody id="technician-table">
      {{!-- {{#each users as |user|}}
        <tr id="user-{{user.id}}">
          <td class="border">{{user.first_name}}</td>
          <td class="border">{{user.last_name}}</td>
          <td class="border">{{user.address}}</td>
          <td class="border"><input type="checkbox" checked="{{technicianConverter user.is_technician}}" /></td>
        </tr>
