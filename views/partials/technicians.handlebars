<h2 class="text-2xl mb-2">Technicians</h2>
{{! search bar }}
<div id="search">
  <input
    type="text"
    id="technician-search-bar"
    class="border border-black mb-2 p-1 w-full"
    placeholder="Search for names..."
  />
</div>

{{! Technicians table }}
<table class="table-auto border border-collapse w-full text-center select-none">
  <thead>
    <tr class="border">
      <th class="border p-1">First Name</th>
      <th class="border p-1">Last Name</th>
      <th class="border p-1">Address</th>
    </tr>
    <tbody id="technician-table">
      {{#each technicians as |technician|}}
        <tr id="user-{{technician.id}}">
          <td class="border p-1">{{technician.first_name}}</td>
          <td class="border p-1">{{technician.last_name}}</td>
          <td class="border p-1">{{technician.address}}</td>
        </tr>
      {{/each}}
    </tbody>
  </thead>
</table>

{{! modal }}
<div
  id="technician-modal"
  class="hidden flex h-full w-full items-center justify-center fixed z-10 top-0 left-0"
  style="background-color: #00000070"
>
  <div
    id="modal-content"
    class="relative w-2/4 h-3/4 px-3 border border-black bg-slate-200 grid grid-rows-[auto_1fr]"
  >
    <span
      id="technician-modal-close"
      class="row-start-1 row-end-2 col-span-full absolute top-[0.5rem] right-[0.5rem] select-none aria-hidden text-bold text-4xl hover:cursor-pointer"
    >&times;</span>
    <div
      class="grid auto-rows-auto grid-cols-2 row-start-1 row-end-2 col-span-full mb-3 p-3 gap-y-2"
    >
      <div class="select-none">First Name:</div>
      <div id="first-name-div"></div>
      <div class="select-none">Last Name:</div>
      <div id="last-name-div"></div>
      <div class="select-none">Address:</div>
      <div id="address-div"></div>
      <div class="select-none">Phone number:</div>
      <div id="phone-div"></div>
    </div>
    <div
      id="job-history"
      class="overflow-hidden overflow-y-auto h-full row-start-2 row-end-3 col-span-full"
    >
      <h4 class="text-center text-xl mb-3 select-none">Job History</h4>
      <table class="w-full text-center">
        <thead>
          <tr>
            <th>Invoice Number</th>
            <th>Date</th>
            <th>Service Type</th>
            <th>Vehicle Registration</th>
          </tr>
        </thead>
        <tbody id="job-list">
        </tbody>

      </table>
    </div>
  </div>
</div>