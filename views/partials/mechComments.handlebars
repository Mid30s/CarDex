{{!-- Completed Service Form --}}
<div class="fixed inset-0 w-full h-full z-20 bg-opacity-50 bg-black flex items-center justify-center hidden" id="serviceModal-{{id}}">
  <div class="bg-white w-11/12 md:max-w-md mx-auto rounded-lg shadow-lg z-30 overflow-y-auto">
    <div class="py-4 px-6">
      <div class="text-center">
        <h3 class="text-2xl mb-4">Add Service Details</h3>
      </div>
      <form action="/api/job" method="POST" id="complete-service-form">
        <div class="mb-3">
          <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="{{id}}-oilChanged" type="checkbox" value="{{oilChanged}} accent-[#004225]"></input>
          <label class="block w-60 pl-1">Oil Changed</label>
        </div>
            
        <div class="mb-3">
          <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="{{id}}-filterChanged" type="checkbox" value="{{filterChanged}} accent-[#004225]"></input>
          <label class="block w-60 pl-1">Filter Changed</label>
        </div>
            
        <div class="mb-4">
          <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="{{id}}-brakesChecked" type="checkbox" value="{{brakesChecked}} accent-[#004225]"></input>
          <label class="block w-60 pl-1">Brakes Checked</label>
        </div>
            
        <div class="mb-4">
          <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="{{id}}-coolantChecked" type="checkbox" value="{{coolantChecked}} accent-[#004225]"></input>
          <label class="block w-60 pl-1">Coolant Checked</label>
        </div>
            
        <div class="mb-4">
          <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="{{id}}-batteryChecked" type="checkbox" value="{{batteryChecked}} accent-[#004225]"></input>
          <label class="block w-60 pl-1">Battery Checked</label>
        </div>
            
        <div class="mb-4">
          <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="{{id}}-suspensionChecked" type="checkbox" value="{{suspensionChecked}} accent-[#004225]"></input>
          <label class="block w-60 pl-1">Suspension Checked</label>
        </div>

        <div class="mb-4">
          <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="{{id}}-filtersChecked" type="checkbox" value="{{filtersChecked}} accent-[#004225]"></input>
          <label class="block w-60 pl-1">All Filters Checked</label>
        </div>

        <div class="mb-4">
          <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="{{id}}-tyresRotated" type="checkbox" value="{{tyresRotated}} accent-[#004225]"></input>
          <label class="block w-60 pl-1">Tyres Rotated</label>
        </div>

        <div class="mb-4">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="additionalNotes">Comments & Future Reccomendations:</label>
          <textarea class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="{{id}}-additionalNotes" type="text" value="{{additionalNotes}}"></textarea>
        </div>

        <div class="mb-4">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="additionalNotes">Cost of Service:</label>
          <textarea class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="{{id}}-additionalNotes" type="text" value="{{additionalNotes}}"></textarea>
        </div>

        <div class="flex items-center justify-between">
          <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" onclick="updateServiceHistory('{{id}}')" type="button">Complete Service</button>
          <button class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" onclick="closeModal('{{id}}')">Close</button>
        </div>
      </form>
    </div>
  </div>
</div>